{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": 1,
    "eqeqeq": 2,
    "eol-last": 0,
    "no-nested-ternary": 1,
    "padded-blocks": [
      1,
      "never"
    ],
    "space-before-blocks": [
      1,
      "always"
    ],
    "spaced-comment": 2,
    "space-infix-ops": 2,
    "@typescript-eslint/no-explicit-any": "off"
  },
  "env": {
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "overrides": [{
    "files": ["jest.config.js"],
    "parserOptions": {
      "sourceType": "script"
    }
  }]
}
